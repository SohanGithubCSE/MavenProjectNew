<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <File name="FileLogger" fileName="D://app.log" append="true">
      <PatternLayout pattern="%msg - [%d{HH:mm:ss}] %-6level %logger %n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="error">
      <AppenderRef ref="FileLogger"/>
    </Root>
  </Loggers>
</Configuration>
